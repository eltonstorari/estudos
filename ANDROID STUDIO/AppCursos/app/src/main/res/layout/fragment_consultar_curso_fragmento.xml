<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.consultarCursoFragmento">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"

        >



        <!-- TODO: Update blank fragment layout -->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="CONSULTARA CURSO"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/campoCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o cÃ³digo do curso"

            />

        <TextView
            android:id="@+id/txt_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:text="Nome do Curso"

            />

        <TextView
            android:id="@+id/txt_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:text="Nome da Categoria"


            />


        <TextView
            android:id="@+id/txt_Professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:text="Nome da Professor"


            />
    </LinearLayout>


    <Button
        android:id="@+id/btnConsultarCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imagemId"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/linearLayout"
        android:src="@drawable/sem_foto"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>